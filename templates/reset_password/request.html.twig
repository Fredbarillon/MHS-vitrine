{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ include('partials/_header.html.twig') }}
    
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body bg-secondary-subtle ">
                        <h1 class="m-4 titlecolor  pb-3">Obtenir un nouveau mot de passe</h1>
                        
                        {{ form_start(requestForm) }}
                        
                        <div class="mb-3 text-center">
                            <small>
                                Entrez une adresse email valide et nous vous enverrons un lien sécurisé.
                            </small>
                        </div>
                        <div class="mb-3">
                            {{ form_row(requestForm.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        
                        <div class="text-center">
                            <button class="btn btn-primary">Envoyer</button>
                        </div>
                        
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
