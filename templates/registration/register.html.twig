{% extends 'base.html.twig' %}

{% block title %}Création nouvel utilisateur{% endblock %}

{% block body %}
<section class="container">
    <div>
        <h1 class="m-4 titlecolor d-flex justify-content-center pb-3">Création d'un nouvel administrateur</h1>
        <strong class="text-danger m-5">Ne faire cela qu'avec une personne de confiance car elle pourra elle aussi créer, modifier et supprimer des mobilhomes, des messages et des photos.</strong>
        <div class="mt-3 d-flex justify-content-center">
            <div class="col-md-6">
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm) }}
                <div class="mb-3">
                    {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        'attr': {'class': 'form-control'}
                    }) }}
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Créer</button>
                <a href="{{ path('app_admin_index') }}" class="btn btn-lg btn-danger ms-3">Annuler</a>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
