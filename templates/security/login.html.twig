{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{{ include('partials/_header.html.twig') }}
{{ include('partials/_navbar.html.twig') }}


<section class="container my-100 d-flex  my-3">
    <div class="row   m-5 pb-5">
        <div class="col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                    Bienvenue,{{ app.user.userIdentifier }},que faisons nous aujourd'hui? <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                
                <button class="btn btn-lg btn-primary mt-3" type="submit">
                    Connexion
                </button>
                <a href="{{ path('app_forgot_password_request')}}" class="btn btn-secondary btn-lg ms-5 mt-3 ">Mot de passe oublié</a>
            </form> 
        </div>
    </div>
</section>


{% endblock %}
